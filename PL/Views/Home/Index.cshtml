@model messageVM
@{
    ViewData["Title"] = "Document";
}

<head>
    <link rel="stylesheet" href="~/css/index.css">
</head>


    <div id="FileUpload">

        <div class="wrapper">
        <form asp-action="Index" enctype="multipart/form-data">
            <div class="upload">
                <p>Drag files here or <span class="upload__button" id="browseButton">Browse</span></p>
                <input asp-for="File" type="file" id="fileInput" style="display: none;" multiple required="">
            </div>
            <div class="uploaded uploaded--one flex">
                <div class="row  px-4 py-3 ">
                    <div class="form-check col-6">
                        <input asp-for="Degree" class="form-check-input" type="radio" value="1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            middle
                        </label>
                    </div>
                    <div class="form-check col-6">
                        <input asp-for="Degree" class="form-check-input" type="radio" value="0" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            hard
                        </label>
                    </div>
                    <div class="form-check col-6">
                        <input asp-for="Type" class="form-check-input" type="radio" value="1" checked>
                        <label class="form-check-label" for="31">
                            encryption
                        </label>
                    </div>
                    <div class="form-check col-6">
                        <input asp-for="Type" class="form-check-input" type="radio" value="0" checked>
                        <label class="form-check-label" for="32">
                            decryption
                        </label>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="form-floating ">
                        <input asp-for="key" type="password" class="form-control" id="floatingPassword" placeholder="Password" required="">
                        <label for="floatingPassword">Key</label>
                    </div>
                </div>
            </div>
            <div class="row justify-content px-3 my-3">
                <input type="submit" class="btn-custom btn btn-success " />
            </div>
        </form>

        </div>

    </div>

    <script src="~/js/index.js"></script>